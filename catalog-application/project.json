{
  "name": "catalog-application",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "catalog-application/src",
  "projectType": "library",
  "tags": ["scope:catalog", "type:application"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/catalog-application",
        "main": "catalog-application/src/index.ts",
        "tsConfig": "catalog-application/tsconfig.lib.json",
        "assets": ["catalog-application/*.md"],
        "format": ["cjs"],
        "generatePackageJson": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "catalog-application/jest.config.ts"
      }
    }
  }
}
